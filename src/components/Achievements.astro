---
const ACHIEVEMENTS = [
  {
    title: "Achievement 1",
    description: "This is a description for the first achievement.",
  },
  {
    title: "Achievement 2",
    description: "This is a description for the second achievement.",
  },
  {
    title: "Achievement 3",
    description: "This is a description for the third achievement.",
  },
]
---

<div class="flex flex-col gap-y-8">
  {
    ACHIEVEMENTS.map(({ title, description }) => (
      <div class="p-4 border border-gray-200 rounded-lg dark:border-gray-700">
        <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100">{title}</h3>
        <p class="mt-2 text-gray-700 dark:text-gray-400">{description}</p>
      </div>
    ))
  }
</div>
